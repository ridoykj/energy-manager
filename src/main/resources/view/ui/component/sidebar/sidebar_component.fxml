<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="TOP_CENTER" styleClass="custom-sidebar" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itbd.energymanager.view.ui.component.sidebar.SidebarComponent">
    <children>
        <ImageView fitHeight="60.0" fitWidth="141.0" onMouseClicked="#pinedSideBar" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
            <image>
                <Image url="@../../../../assets/icon/appicon/logo.png" />
            </image>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </VBox.margin>
        </ImageView>
        <ListView fx:id="lv_menu" fixedCellSize="65.0" prefWidth="170.0" VBox.vgrow="ALWAYS" />
    </children>
    <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
    </padding>
   <stylesheets>
      <URL value="@../../../../assets/css/sidebar.css" />
      <URL value="@../../../../assets/css/listview.css" />
   </stylesheets>
</VBox>
