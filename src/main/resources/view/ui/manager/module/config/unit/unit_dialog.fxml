<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itbd.energymanager.view.ui.manager.module.config.unit.GradeDialog">
    <center>
        <VBox spacing="4.0" BorderPane.alignment="CENTER">
            <children>
            <Label text=":Min Unit">
               <graphic>
                  <TextField fx:id="txMin" prefWidth="110.0" styleClass="tx-default" />
               </graphic>
            </Label>
            <Label text=":Max Unit">
               <graphic>
                  <TextField fx:id="txMax" prefWidth="110.0" styleClass="tx-default" />
               </graphic>
            </Label>
            <Label text=":Rate">
               <graphic>
                  <TextField fx:id="txRate" prefWidth="110.0" styleClass="tx-default" />
               </graphic>
            </Label>
            <Label text=":Vat">
               <graphic>
                  <TextField fx:id="txVat" prefWidth="110.0" styleClass="tx-default" />
               </graphic>
            </Label>
            <Label text=":SD">
               <graphic>
                  <TextField fx:id="txSd" prefWidth="110.0" styleClass="tx-default" />
               </graphic>
            </Label>
            <Label text=":SC">
               <graphic>
                  <TextField fx:id="txSc" prefWidth="110.0" styleClass="tx-default" />
               </graphic>
            </Label>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
            </padding>
        </VBox>
    </center>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
    <bottom>
        <HBox prefWidth="200.0" spacing="8.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#save" styleClass="btn-primary" text="Save" />
                <Button mnemonicParsing="false" onAction="#close" styleClass="btn-error" text="Cancel" />
            </children>
        </HBox>
    </bottom>
   <stylesheets>
      <URL value="@../../../../../../assets/css/main.css" />
      <URL value="@../../../../../../assets/css/button.css" />
   </stylesheets>
</BorderPane>
